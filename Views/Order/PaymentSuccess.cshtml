@using System.Globalization
@model Coza_Ecommerce_Shop.Models.Entities.Order
@{
    ViewData["Title"] = "Payment Success";
    var totalPrice = Model.TotalAmount.ToString("#,0", new CultureInfo("vi-VN")) + "đ";

}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success display-1"></i>
                    </div>
                    <h1 class="text-primary fw-bold">Thanh toán thành công!</h1>
                    <h4 class="text-danger mt-3">@TempData["Message"]</h4>
                    <p class="text-muted">Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đã được xử lý thành công.</p>

                    <div class="table-responsive">
                        <table class="table table-bordered mt-4">
                            <tr>
                                <th>Mã đơn hàng:</th>
                                <td>@Model.Code</td>
                            </tr>
                            <tr>
                                <th>Ngày đặt:</th>
                                <td>@Model.CreatedAt</td>
                            </tr>
                            <tr>
                                <th>Tổng tiền:</th>
                                <td class="text-success fw-bold">@totalPrice</td>
                            </tr>
                        </table>
                    </div>

                    <a asp-controller="order" asp-action="detail" asp-route-id="@Model.Id" class="btn btn-primary mt-3 px-4 py-2">Xem đơn hàng</a>
                </div>
            </div>
        </div>
    </div>
</div>
