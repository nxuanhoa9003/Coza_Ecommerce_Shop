@using Coza_Ecommerce_Shop.Models.Helper
@model IEnumerable<Coza_Ecommerce_Shop.Models.Entities.Order>


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Order
        </span>
    </div>
</div>

<div class="container py-5 m-t-23 p-b-140">
    <h3 class="text-center mb-4">Danh sách đơn hàng</h3>
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Mã đơn hàng</th>
                <th class="text-center">Ngày đặt</th>
                <th class="text-center">Tổng tiền</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.CreatedAt</td>
                    <td class="text-success fw-bold">@item.TotalAmount</td>
                    <td><span class="@OrderStatusHelper.GetBadgeClass(item.Status)">@item.Status</span></td>
                    <td>
                        <a asp-controller="order" asp-action="detail" asp-route-id="@item.Id" class="btn btn-sm cl0 bg10 bor5 hov-btn3 trans-04">Xem chi tiết</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>
