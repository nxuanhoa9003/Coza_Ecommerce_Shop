@using Coza_Ecommerce_Shop.ViewModels.Account
@model ConfirmLinkGoogleViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xác nhận liên kết Google";
}

<div class="m-t-23 p-b-140">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 text-center" style="max-width: 450px; border-radius: 12px;">
            <div class="card-body">
                <h3 class="cl1">@ViewData["Title"]</h3>
                <p class="mt-3">
                    Tài khoản email <strong>@Model.Email</strong> đã tồn tại nhưng chưa được liên kết với Google.
                </p>
                <p>Bạn có muốn liên kết tài khoản này với Google không?</p>

                <form method="post" asp-action="ConfirmLinkGoogle" asp-controller="Account">
                    <input type="hidden" name="email" value="@Model.Email" />
                    <input type="hidden" name="providerKey" value="@Model.ProviderKey" />

                    <button type="submit" class="btn bg10 hov-btn3 cl0 shadow-sm mt-2">
                        <i class="bi bi-google"></i> Liên kết ngay
                    </button>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm mt-2">
                        Huỷ
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

