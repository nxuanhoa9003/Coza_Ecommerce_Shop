@using Coza_Ecommerce_Shop.ViewModels.Account;
@model ForgotPasswordViewModel
@{

    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center bg-light min-vh-100 py-5">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 12px;">

        <div class="text-center">
            <h4 class="mb-2 text-primary fw-bold">Forgot Password? 🔒</h4>
            <p class="text-muted">Enter email to reset password</p>
        </div>
        <form id="formForgotPassword" asp-controller="Account" asp-action="ForgotPassword" method="POST">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control shadow-sm p-2"
                       placeholder="Nhập email của bạn" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button class="btn btn-primary w-100 shadow-sm">Gửi link đặt lại mật khẩu</button>
        </form>
        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-primary">
                <i class="bx bx-chevron-left"></i> Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>

