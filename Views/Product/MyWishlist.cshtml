@model IEnumerable<Coza_Ecommerce_Shop.Models.Entities.Product>;
@using System.Globalization


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>
        <span class="stext-109 cl4">
            My Wishlist
        </span>
    </div>
</div>


<!-- my wishlish -->

<div class="container bg0 p-t-75 p-b-85">
    <div class="row">
        <div class="col-lg-12 col-xl-12 m-lr-auto m-b-50">
            <div class="m-r--38 m-lr-0-xl w-100">
                <div class="wrap-table-shopping-cart">
                    <table class="table-shopping-cart">
                        <tr class="table_head">

                            <th class="column-1">Product</th>
                            <th class="column-2">Name</th>
                            <th class="column-3">Price</th>
                            <th class="column-4">Actions</th>
                        </tr>
                        @foreach (var product in Model)
                        {
                            var productdefault = product.Variants.FirstOrDefault(x => x.IsDefault);
                            var price = productdefault.BasePrice.Value.ToString("#,0", new CultureInfo("vi-VN")) + "đ";

                            <tr class="table_row">
                                <td class="column-1">
                                    <div class="how-itemcart1">
                                        <img src="@product.Image" alt="@product.Title">
                                    </div>
                                </td>

                                <td class="column-2">
                                    <a class="stext-104 cl4 hov-cl1 trans-04 js-name-detail p-b-6" 
                                        asp-controller="Product" asp-action="ProductDetail" asp-route-slug="@product.Slug">
                                        <span class="fs-15">@product.Title</span>
                                    </a>
                           
                                </td>

                                <td class="column-3">@price</td>


                                <td class="column-4">
                                    <button data-id="@product.Id" type="button" class="btn btn-danger btn-sm btn-remove-item-wishlist">
                                        <i class="zmdi zmdi-delete"></i> Remove
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>

                </div>


            </div>
        </div>
    </div>
</div>






