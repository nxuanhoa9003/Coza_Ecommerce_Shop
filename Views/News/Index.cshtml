@using System.Globalization
@model Coza_Ecommerce_Shop.ViewModels.NewsViewModel
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            News
        </span>

    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4 ltext-103">Tin tức mới nhất</h2>

    <div class="row">
        @foreach(var item in Model.News)
        {
            <!-- Bài viết 1 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card news-card">
                    <a href="news-detail.html">
                        <img src="@item.Image" alt="news-img" class="news-img">
                    </a>

                    <div class="news-body">
                        <small class="news-date d-block mb-1">
                            @item.CreateDate.ToString("dd MMMM, yyyy", new CultureInfo("vi-VN"))
                        </small>
                        <h5 class="news-title">
                            <a href="news-detail.html" class="text-dark text-decoration-none">
                                @item.Title
                            </a>
                        </h5>

                        <p class="news-description">
                            @item.Description   
                        </p>

                        <a asp-controller="News" asp-action="Details" asp-route-slug="@item.Slug" class="btn-read-more mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            <!-- Kết thúc bài viết -->
        }
       
    </div>
</div>
@await Component.InvokeAsync("UserPaging", new { model = Model.PagingInfo })
