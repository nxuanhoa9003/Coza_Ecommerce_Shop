@using Coza_Ecommerce_Shop.ViewModels.Account
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <div class="text-center">
            <h3 class="mb-3 text-primary">🔒 Reset Password</h3>
            <p class="text-muted">Enter your new password below.</p>
        </div>

        <form asp-area="Admin" asp-controller="Account" asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label class="form-label fw-bold">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none text-secondary">Back to Login</a>
        </div>
    </div>
</div>
