@model Coza_Ecommerce_Shop.Models.Entities.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin_Sub.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Posts" asp-action="Index">Posts</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
</nav>
<hr />

<div class="card mb-4">
    <div class="card-header">
        <h4 class="mb-0">@Model.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Slug)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Image)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SeoTitile)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SeoTitile)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SeoDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SeoDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SeoKeywords)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SeoKeywords)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @if (Model.IsActive)
                {
                    <span class="badge bg-info">Đang hiển thị</span> <!-- Hiển thị thông báo với badge màu xanh -->
                }
                else
                {
                    <span class="badge bg-danger">Đã ẩn</span> <!-- Thêm thông báo cho trường hợp không hiển thị -->
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Title)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <div class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary">Danh sách</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>

    </div>

</div>


